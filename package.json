{
  "name": "electronapp",
  "version": "0.0.0",
  "private": true,
  "main": "dist-electron/main/index.js",
  "author": "作者",
  "description": "应用描述",
  "scripts": {
    "dev": "vite --mode development",
    "dev:prod": "vite --mode production",
    "build": "npm run electron:generate-icons && npm run vite:build && npm run electron:build",
    "build:prod": "npm run electron:generate-icons && npm run vite:build:prod && npm run electron:build",
    "vite:build": "vite build --mode development",
    "vite:build:prod": "vite build --mode production",
    "vite:build-type": "run-p vite:type-check vite:build",
    "vite:build-type:prod": "run-p vite:type-check vite:build:prod",
    "vite:preview": "vite preview",
    "vite:type-check": "vue-tsc --noEmit",
    "vite:lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "vite:format": "prettier --write src/",
    "electron:build": "electron-builder",
    "electron:generate-icons": "electron-icon-builder --input=./public/favicon.png --output=dist-icon --flatten"
  },
  "dependencies": {
    "electron-log": "^5.1.1",


    "pinia": "^2.1.7",
    "sass": "^1.74.1",
    "view-ui-plus": "^1.3.16",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {

    "@types/node": "^18.14.2",


    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "cross-env": "^7.0.3",
    "electron": "^23.1.4",
    "electron-builder": "^23.6.0",
    "electron-icon-builder": "^2.0.1",


    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",

    "typescript": "~4.8.4",

    "vite-plugin-electron": "^0.11.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.2.0",


    "@rushstack/eslint-patch": "^1.8.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "vite": "^5.2.8",
    "vite-plugin-vue-devtools": "^7.0.25",
    "vitest": "^1.4.0"


  },
  "build": {
    "productName": "桌面应用名",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "icon": "dist-icon/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "dist-icon/**/*",
      "dist/**/*",
      "dist-electron/**/*",
      "static/**/*"
    ],
    "mac": {
      "icon": "dist-icon/icons/icon.icns",
      "extendInfo": {
        "LSUIElement": 0,
        "Application Category": "Utilities",
        "Copyright(All)": "© 某某公司版权所有",
        "NSUserNotificationAlertStyle": "alert"
      },
      "target": [
        {
          "target": "default",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "dist-icon/icons/icon.icns",
      "background": "static/install_background.png",
      "internetEnabled": true,
      "title": "桌面应用名",
      "window": {
        "width": 580,
        "height": 400
      },
      "contents": [
        {
          "x": 408,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 178,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "volta": {
    "node": "16.18.1",
    "yarn": "1.22.19"
  }
}
